            </div>
        </div>
    </section>
    <section class="main-container">
        <div class="container-fluid">
            <div class="row mx-auto justify-content-around mt-2">
                <article class="col-12 text-center">
                    <div class="mx-auto">
                        <i class="fa fa-question-circle fa-5x"></i>
                        <h4 class="mb-3 mt-3">Sprawdź czy ktoś wpisał cię na swoją listę długów, podaj PESEL</h4>
                        <input type="text" id="pesel-for-read" placeholder="Podaj PESEL" />
                        <p class="mb-0 mt-5 text-justify">
                            <table id="grid-data" data-toggle="bootgrid" class="table table-condensed table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th data-column-id="id" data-type="numeric">ID</th>
                                        <th data-column-id="value">Dług</th>
                                        <th data-column-id="name">Imię</th>
                                        <th data-column-id="surname">Nazwisko</th>
                                        <th data-column-id="created" data-order="desc">Data utworzenia</th>
                                        <th data-column-id="updated" data-order="desc">Data aktualizacji</th>
                                        <th data-column-id="returnedValue">Zwrócono</th>
                                        <th data-column-id="status">Status</th>
                                    </tr>
                                </thead>
                            </table>
                        </p>
                    </div>
                </article>
            </div>
        </div>
    </section>
    <section class="main-container">
        <div class="container-fluid">
            <div class="row mx-auto justify-content-around mt-2">
                <article class="col-12 text-center">
                    <div class="mx-auto">
                        <i class="fa fa-question-circle fa-5x"></i>
                        <h4 class="mb-3 mt-3">Lista twoich dłużników</h4>
                        <p class="mb-0 mt-5 text-justify"></p>
                        @if (User.Identity.IsAuthenticated == true)
                        {
                            <table id="grid-data-creditor" data-toggle="bootgrid" class="table table-condensed table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th data-column-id="id" data-type="numeric">ID</th>
                                        <th data-column-id="value">Dług [zł]</th>
                                        <th data-column-id="name">Imię</th>
                                        <th data-column-id="surname">Nazwisko</th>
                                        <th data-column-id="pesel">PESEL</th>
                                        <th data-column-id="created" data-order="desc">Data utworzenia</th>
                                        <th data-column-id="updated" data-order="desc">Data aktualizacji</th>
                                        <th data-column-id="returnedValue">Zwrócono [zł]</th>
                                        <th data-column-id="status">Status</th>
                                        <th data-column-id="commands" data-formatter="commands" data-sortable="false">Akcje</th>
                                    </tr>
                                </thead>
                            </table>
                        }
                        else
                        {
                            <a class='btn btn-info btn-lg' href='@Url.Action("Index", "Authentication")'>Zaloguj się aby zarządzać swoimi dłużnikami!</a>
                        }
                    </div>
                </article>
            </div>
        </div>
    </section>
