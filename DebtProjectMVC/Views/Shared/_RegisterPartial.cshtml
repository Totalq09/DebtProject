@model DebtProjectMVC.Models.ViewModels.AuthenticationViewModel
        <section class="container-fluid">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" asp-controller="Authentication" asp-action="Register" method="post">
                <div class="mx-auto mb-4 text-center">
                    <i class="fa fa-user-plus fa-5x"></i>
                </div>
                <h3 class="text-center">Rejestracja nowego użytkownika</h3>
                <hr />
                <div class="text-danger font-weight-bold mb-2">
                    @Html.ValidationMessage("RegisterValidationMessage_0")
                    @Html.ValidationMessage("RegisterValidationMessage_1")
                    @Html.ValidationMessage("RegisterValidationMessage_2")
                </div>
                <div class="form-group">
                    <label asp-for="RegisterViewModel.RegisterEmail"></label>
                    <input asp-for="RegisterViewModel.RegisterEmail" class="form-control" />
                    <span asp-validation-for="RegisterViewModel.RegisterEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterViewModel.RegisterPassword"></label>
                    <input asp-for="RegisterViewModel.RegisterPassword" class="form-control" />
                    <span asp-validation-for="RegisterViewModel.RegisterPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterViewModel.ConfirmRegisterPassword"></label>
                    <input asp-for="RegisterViewModel.ConfirmRegisterPassword" class="form-control" />
                    <span asp-validation-for="RegisterViewModel.ConfirmRegisterPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterViewModel.RegisterName"></label>
                    <input asp-for="RegisterViewModel.RegisterName" class="form-control" />
                    <span asp-validation-for="RegisterViewModel.RegisterName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterViewModel.RegisterSurname"></label>
                    <input asp-for="RegisterViewModel.RegisterSurname" class="form-control" />
                    <span asp-validation-for="RegisterViewModel.RegisterSurname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterViewModel.RegisterPESEL"></label>
                    <input asp-for="RegisterViewModel.RegisterPESEL" class="form-control" />
                    <span asp-validation-for="RegisterViewModel.RegisterPESEL" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">Zarejestruj</button>
            </form>
        </section>